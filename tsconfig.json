{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "ES2020",                        
    "rootDir": "src",                            
    "outDir": "dist",                            
    "strict": true,                              
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,                     
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,                   
    "moduleResolution": "node",
    "noImplicitAny": false,                      
    "baseUrl": "src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@usecases/*": ["usecases/*"],
      "@adapters/*": ["adapters/*"],
      "@infra/*": ["infrastructure/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
